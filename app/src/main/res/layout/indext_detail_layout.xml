<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_head_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:onClick="click"
            android:src="@drawable/home_as_up" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="帖子详情"
            android:paddingLeft="30dp"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/iv_head_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:onClick="click"
            android:src="@drawable/icon_share_new" />

        <ImageView
            android:id="@+id/iv_head_kill"
            android:layout_width="0dp"
            android:layout_height="22dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:onClick="click"
            android:src="@drawable/msg_more_icon" />
    </LinearLayout>


    <ListView
        android:id="@+id/lv_first_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>


</LinearLayout>