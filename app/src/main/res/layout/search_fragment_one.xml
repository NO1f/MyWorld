<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/search_rl_one"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_third_bottom_refresh"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="4dp"
        android:scaleType="fitXY"
        android:layout_centerInParent="true"
        android:background="@drawable/wait" />

    <LinearLayout
        android:id="@+id/ll_wangluo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_net_error"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#B7B7B7"
            android:text="请检查您的网络"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ListView
        android:id="@+id/lv_search_one"
        android:layout_width="85dp"
        android:layout_height="match_parent"
        android:background="#E8E8E8"
        android:scrollbars="none"
        android:dividerHeight="1dp"/>

    <GridView
        android:id="@+id/gv_search_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:horizontalSpacing="5dp"
        android:verticalSpacing="25dp"
        android:listSelector="@android:color/transparent"
        android:layout_toRightOf="@+id/lv_search_one"
        android:numColumns="3"/>
    </LinearLayout>

</RelativeLayout>