<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_taobao"
        android:layout_width="match_parent"
        android:layout_height="60dp">

    <ImageView
        android:id="@+id/iv_taobao"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_goods_store_tb"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:id="@+id/tv_taobao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="淘宝订单"
        android:layout_toRightOf="@+id/iv_taobao"
        android:layout_centerVertical="true"
        android:textSize="16sp"/>

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/ic_back_color_shopping"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:src="@drawable/imaginary_line"
        android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_tianmao"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/iv_tainmao"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_goods_store_jd"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="京东订单"
            android:layout_toRightOf="@+id/iv_tainmao"
            android:layout_centerVertical="true"
            android:textSize="16sp"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_back_color_shopping"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:src="@drawable/imaginary_line"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</LinearLayout>